[Unit]

Description=ASCON Pilot-Update

After=network.target

 

[Service]

User=pilotuser

Group=pilotuser

Type=oneshot

RemainAfterExit=yes

WorkingDirectory=/opt/pilot-servers/slot_2

ExecStart=/bin/sh /opt/pilot-servers/slot_2/bin/updateScript.sh /opt/pilot-servers/slot_2/Update /opt/pilot-servers/slot_2

 

[Install]

WantedBy=multi-user.target
